<!DOCTYPE html>
<html>
  <head>
    <title>Noticias</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href="/">Noticias</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
       <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
       <ul class="navbar-nav mr-auto">
         <% if user_signed_in? %>
           <li class="nav-item">
             <%= link_to "Dashboard", dashboard_path, class: 'nav-link' %>
           </li>
           <!-- <li class="nav-item">
             <%= link_to "Posts", posts_path, class: 'nav-link' %>
           </li> -->
         <% end %>
       </ul>
       <ul class="navbar-nav my-2 my-lg-0">
         <% if user_signed_in? %>
           <li class="nav-item">
             <%= link_to "Sign Out", destroy_user_session_path, :method => :delete, class: 'nav-link' %>
           </li>
          <% else %>
           <li class="nav-item">
             <a class="nav-link" href="<%= new_user_session_path %>">Login <span class="sr-only">(current)</span></a>
           </li>
           <!-- <li class="nav-item">
             <a class="nav-link" href="<%= new_user_registration_path %>">Sign Up <span class="sr-only">(current)</span></a>
           </li> -->
          <% end %>
       </ul>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
